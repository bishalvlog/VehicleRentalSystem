@using VehicleRentalSystem.Domain.Entities;

@model List<Offer>

@{
    ViewData["Title"] = "Offers";
}

<partial name="_Notification" />

<div class="container-fluid" style=" margin-top:13vh;">
    <div class="row mb-3">
        <div class="col-6">
            <h3 class="text-dark">List of Offers</h3>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Insert"><i class="fa-solid fa-plus"></i> &nbsp; Add a new Offer</a>
        </div>
    </div>

    <div class="p-2 border rounded">
        <table id="tableData" class="table table-striped table-bordered" style="width:100%">
            <thead class="mt-2">
                <tr class="table-info">
                    <th class="text-center">Title</th>
                    <th class="text-center">Discount</th>
                    <th class="text-center">Start Date</th>
                    <th class="text-center">End Date</th>
                    <th class="text-center">Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Discount %</td>
                        <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">
                            <a href="@Url.Action("Detail", "Offer", new { id = item.Id })" class="btn btn-sm"><i class="fa-solid fa-circle-info"></i></a>
                            <a href="@Url.Action("Delete", "Offer", new { id = item.Id })" class="btn btn-sm"><i class="fa fa-trash text-danger"></i></a> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        $("#tableData").DataTable();
    </script>
}

