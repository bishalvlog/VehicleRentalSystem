@using VehicleRentalSystem.Presentation.Areas.Admin.ViewModels;

@model VehicleDetailViewModel

@{
    ViewData["Title"] = "Vehicle Detail";
    var title = "Vehicle Details";
}

<div class="row" style=" margin-top:10vh;">
    <form method="post">
        <div class="row mb-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-6">
                <h3 class="text-dark mb-4">@title</h3>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <img src="@Model.VehicleImageViewModel.ImageURL" style="width:350px;height:250px; object-fit:cover; margin:auto" />
                        </div>
                        <div class="col-8">
                            <div class="form-group row">
                                <input asp-for="VehicleImageViewModel.Id" class="form-control" type="hidden"/>
                                <div class="col-4">
                                    <label asp-for="VehicleImageViewModel.Model" class="fw-bold">Model: </label>
                                </div>
                                <div class="col-8 mb-3">
                                    @Model.VehicleImageViewModel.Model
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="VehicleImageViewModel.Brand" class="fw-bold">Brand: </label>
                                </div>
                                <div class="col-8 mb-3">
                                    @Model.VehicleImageViewModel.Brand
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="VehicleImageViewModel.Color" class="fw-bold">Color:</label>
                                </div>
                                <div class="col-8 mb-3">
                                    @Model.VehicleImageViewModel.Color
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="VehicleImageViewModel.PlateNumber" class="fw-bold">Plate Number:</label>
                                </div>
                                <div class="col-8 mb-3">
                                    @Model.VehicleImageViewModel.PlateNumber
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="VehicleImageViewModel.PricePerDay" class="fw-bold">Price Per Day:</label>
                                </div>
                                <div class="col-8 mb-3">
                                    @Model.VehicleImageViewModel.PricePerDay
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="VehicleImageViewModel.Description" class="fw-bold">Description:</label>
                                </div>
                                <div class="col-8 mb-3">
                                    @Model.VehicleImageViewModel.Description
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="VehicleImageViewModel.Features" class="fw-bold">Features: </label>
                                </div>
                                <div class="col-8 mb-3">
                                    @Model.VehicleImageViewModel.Features
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="VehicleImageViewModel.CreatedBy" class="fw-bold">Created By:</label>
                                </div>
                                <div class="col-8 mb-3">
                                    @Model.VehicleImageViewModel.CreatedBy
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="VehicleImageViewModel.CreatedDate" class="fw-bold"> Created Date: </label>
                                </div>
                                <div class="col-8 mb-4">
                                    @Model.VehicleImageViewModel.CreatedDate
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-8 offset-4">
                                    <div class="row">
                                        <div class="col">
                                            <a asp-action="Index" class="btn btn-blue form-control">Back to List</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    @if (Model.RentailDetails.Count > 0)
    {
        <div class="row">
            <table id="tableData" class="table table-striped table-bordered" style="width:100%">
                <thead class="mt-2">
                    <tr class="table-info">
                        <th class="text-center">Customer Name</th>
                        <th class="text-center">Rented Days</th>
                        <th class="text-center">Return Date</th>
                        <th class="text-center">Total Amount</th>
                        <th class="text-center">Approved Staff</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.RentailDetails)
                    {
                        <tr>
                            <td>@item.CustomerName</td>
                            <td>@item.RentedDays</td>
                            <td>@item.ReturnedDate</td>
                            <td>@item.TotalAmount</td>
                            <td>@item.ApprovedStaff</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h2>The vehicle has not been rented yet.</h2>
    }
</div>

@section Scripts{
    <script>
        $("#tableData").DataTable();
    </script>
}
