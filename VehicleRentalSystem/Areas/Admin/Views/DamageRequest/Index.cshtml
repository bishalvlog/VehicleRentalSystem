@using VehicleRentalSystem.Presentation.Areas.Admin.ViewModels;

@model List<DamageViewModel>

@{
    ViewData["Title"] = "Damage Requests";
}

<partial name="_Notification" />


<div class="container-fluid" style=" margin-top:13vh;">
    <div class="row mb-3">
        <div class="col-6">
            <h3 class="text-dark">Damage Requests</h3>
        </div>
        
    </div>

    <div class="p-2 border rounded">
        <table id="tableData" class="table table-striped table-bordered" style="width:100%">
            <thead class="mt-2">
                <tr class="table-info">
                    <th class="text-center">Customer Name</th>
                    <th class="text-center">Vehicle Name</th>
                    <th class="text-center">Requested Date</th>
                    <th class="text-center">Repair Cost</th>
                    <th class="text-center">Payment Status</th>
                    <th class="text-center">Options</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CustomerName</td>
                    <td>@item.VehicleName</td>
                    <td>@item.RequestDate</td>
                    <td>@item.Cost</td>
                    <td>@item.PaymentStatus</td>
                    <td class="text-center">
                        <a href="@Url.Action("Details", "DamageRequest", new { id = item.DamageId })" class="btn  btn-sm"><i class="fa-solid fa-circle-info"></i></a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        $("#tableData").DataTable();
    </script>
}
