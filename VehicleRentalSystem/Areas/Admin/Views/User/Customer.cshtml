@using VehicleRentalSystem.Presentation.Areas.Admin.ViewModels;
@model List<UserViewModel>
@{
    ViewData["Title"] = "Customers";
}
<partial name="_Notification" />
<div class="container-fluid" style=" margin-top:13vh;">
    <div class="row mb-3">
        <div class="col-6">
            <h3 class="text-dark">List of Customers</h3>
        </div>
    </div>

    <div class="p-2 border rounded">
        <table id="tableData" class="table table-striped table-bordered" style="width:100%">
            <thead class="mt-2">
                <tr class="table-info">
                    <th class="text-center">Name of the Customer</th>
                    <th class="text-center">Address</th>
                    <th class="text-center">Phone Number</th>
                    <th class="text-center">Total Rents</th>
                    <th class="text-center">Last Rented Date</th>
                    <th class="text-center">Activation Status</th>
                    <th class="text-center">Regular Status</th>
                    <th class="text-center">Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Address, @item.State</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.TotalRents</td>
                        <td>@item.LastRentedDate</td>
                        <td>@item.ActivationStatus</td>
                        <td>@item.RegularStatus</td>
                        <td class="text-center">
                            <a href="@Url.Action("Details", "User", new { id = item.UserId })" class="btn btn-sm"><i class="fa-solid fa-circle-info"></i></a>
                            <a href="@Url.Action("Password", "User", new { id = item.UserId })" class="btn btn-sm"><i class="fa-sharp fa-solid fa-key"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
        <script>
            $("#tableData").DataTable();
        </script>
}