@using VehicleRentalSystem.Domain.Constants;
@using VehicleRentalSystem.Presentation.Areas.Admin.ViewModels;

@model CustomerRentDetails

@{
    ViewData["Title"] = "Customer Detail";

    var title = "Customer Details";

    if(Model.Role == Constants.Staff)
    {
        title = "Staff Details";
    }
}

<partial name="_Notification" />

<div class="container-fluid" style=" margin-top:10vh;">
    <form method="post">
        <div class="row mb-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-6">
                <h3 class="text-dark mb-4">@title</h3>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                                <img id="profilePicture" style="width:280px;height:250px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Customer.Image))">
                        </div>
                         <div class="col-8">
                            <div class="form-group row">
                                <input asp-for="Customer.Id" class="form-control" type="hidden"/>
                                <div class="col-4">
                                    <label asp-for="Customer.FullName" class="fw-bold">Full Name</label>
                                </div>
                                <div class="col-8 mb-4">
                                    @Model.Customer.FullName
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="Customer.Email" class="fw-bold">Email</label>
                                </div>
                                <div class="col-8 mb-4">
                                    @Model.Customer.Email
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="Customer.PhoneNumber" class="fw-bold">Phone Number</label>
                                </div>
                                <div class="col-8 mb-4">
                                    @Model.Customer.PhoneNumber
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="Customer.Address" class="fw-bold">Address</label>
                                </div>
                                <div class="col-8 mb-4">
                                    @Model.Customer.Address
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="Customer.State" class="fw-bold">State</label>
                                </div>
                                <div class="col-8 mb-4">
                                    @Model.Customer.State
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-8 offset-4">
                                    <div class="row">
                                        @if(Model.Role == Constants.Customer)
                                        {
                                            <div class="col">
                                                <a asp-action="Customer" class="btn btn-blue form-control">Back to List</a>
                                            </div>
                                            <div class="col">
                                                <button type="submit" asp-action="Update" asp-route-id="@Model.Customer.Id" class="btn btn-outline-info form-control">Update Status</button>
                                            </div>
                                        }
                                        @if(Model.Role == Constants.Staff)
                                        {
                                            <div class="col">
                                                <a asp-action="Staff" class="btn btn-blue form-control">Back to List</a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>  
        </div>
    </form>
    @if (Model.CustomerRent.Count > 0)
    {
        <div class="row">
            <table id="tableData" class="table table-striped table-bordered" style="width:100%">
                <thead class="mt-2">
                    <tr class="table-info">
                        <th class="text-center">Vehicle Name</th>
                        <th class="text-center">Rented Days</th>
                        <th class="text-center">Return Date</th>
                        <th class="text-center">Total Amount</th>
                        <th class="text-center">Approved Staff</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CustomerRent)
                    {
                        <tr>
                            <td>@item.VehicleName</td>
                            <td>@item.RentedDays</td>
                            <td>@item.ReturnedDate</td>
                            <td>@item.TotalAmount</td>
                            <td>@item.ApprovedStaff</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h2>The customer has not rented anything yet.</h2>
    }
</div>

@section Scripts{
    <script>
        $("#tableData").DataTable();
    </script>
}
