@using VehicleRentalSystem.Presentation.Areas.Admin.ViewModels;
@model List<RentalDetailsViewModel>

@{
    ViewData["Title"] = "Current Rents";
}

<partial name="_Notification" />

<div class="row" style="margin-top:10vh;">
	<h3 class="mx-5 mb-4">Current Rents</h3>
	<form method="post">
		@foreach (var item in Model)
		{
			<div class="card mb-5 mx-5">
				<div class="card-body">
					<div class="row">
						<div class="col-4">
							<img src="@item.ImageURL" style="width:350px;height:250px; object-fit:cover; margin:auto" />
						</div>
						<div class="col-8">
							<div class="row">
								<input asp-for="@item.Id" hidden/>
							</div>
							<div class="row mb-1">
								<div class="col-3 fw-bold">
									Customer Name:
								</div>
								<div class="col-9">
									@item.UserName
								</div>
							</div>
							<div class="row mb-1">
								<div class="col-3 fw-bold">
									Phone Number:
								</div>
								<div class="col-9">
									@item.PhoneNumber
								</div>
							</div>
							<div class="row mb-1">
								<div class="col-3 fw-bold">
									Vehicle Name:
								</div>
								<div class="col-9">
									@item.VehicleName
								</div>
							</div>
							<div class="row mb-1">
								<div class="col-3 fw-bold">
									Requested Date:
								</div>
								<div class="col-9">
									@item.RequestedDate
								</div>
							</div>
							<div class="row mb-1">
								<div class="d-flex w-full">
									<div class="d-flex w-50">
										<div class="col-6 fw-bold">
											Start Date:
										</div>
										<div class="col-4" style="margin-left:6px;">
											@item.StartDate
										</div>
									</div>
									<div class="d-flex w-50">

										<div class="col-4 fw-bold">
											End Date:
										</div>
										<div class="col-8">
											@item.EndDate
										</div>
									</div>
								</div>
							</div>
							<div class="row mb-1">
								<div class="col-3 fw-bold">
									Total Amount:
								</div>
								<div class="col-9">
									@item.TotalAmount
								</div>
							</div>
							<div class="row mb-1">
								<div class="col-3 fw-bold">
									Accepted Date:
								</div>
								<div class="col-9">
									@item.ActionDate
								</div>
							</div>
							<div class="row mb-1">
								<div class="col-3 fw-bold">
									Accepted By:
								</div>
								<div class="col-9">
									@item.ActionBy
								</div>
							</div>
							<div class="d-flex w-full justify-content-end">
								<button type="submit" class="px-4 btn btn-blue" asp-route-rentalId="@item.Id">Return</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</form>
    
</div>

