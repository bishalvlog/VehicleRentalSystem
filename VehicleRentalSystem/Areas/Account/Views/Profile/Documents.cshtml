@model DetailViewModel

@{
    ViewData["Title"] = "Documents";
}

<partial name="_Notification" />

<form method="post" enctype="multipart/form-data">
    <div class="container" style=" margin-top:10vh;">
        <h3 class="mb-4">Documents</h3>
        <div class="d-flex">
            <div class="d-flex flex-column " style="width:60%;">
                <div class="row mb-3">
                    <div class="col-3">
                        <label asp-for="CitizenshipNumber">Citizenship Number</label>
                    </div>
                    <div class="col-9">
                        <input asp-for="CitizenshipNumber" class="form-control w-75" />
                    </div>
                </div>
                @if (Model.CitizenshipNumber == null)
                {
                    <div class="form-group row mb-3">
                        <div class="col-3">
                            <label class="custom-file-label">Choose your citizenship</label>
                        </div>
                        <div class="col-9">
                            <input asp-for="CitizenshipNumber" type="file"  name="citizenship" class="custom-file-input" id="exampleInputFile" onchange="readURL(this);" class="form-control" accept="application/pdf, image/png" />
                        </div>
                    </div>
                }

                <div class="row mb-3">
                    <div class="col-3">
                        <label asp-for="LicenseNumber">License Number</label>
                    </div>
                    <div class="col-9">
                        <input asp-for="LicenseNumber"class=" form-control w-75" />
                    </div>
                </div>
                @if (Model.LicenseNumber == null)
                {
                        <div class="form-group row mb-3">
                            <div class="col-3">
                                <label class="custom-file-label">Choose your license</label>
                            </div>
                            <div class="col-9">
                                <input asp-for="LicenseURL" type="file"  name="license" class="custom-file-input" id="exampleInputFile" onchange="readURL(this);" class="form-control" accept="application/pdf, image/png" />
                            </div>
                        </div>
                }
                <div class="row mb-3">
                     <div class="col-3">
                        <label asp-for="ExpirationDate"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="ExpirationDate" class="form-control w-75"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                    </div>
                    <div class="col-9">
                        <button type="submit" class="w-75 btn btn-green mt-3 mb-5">Save</button>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-column align-items-end" style="width:40%;">
                @if (Model.LicenseURL != null)
                {
                        <a class="btn btn-blue mb-4 w-75" href="@Model.LicenseURL" target="_blank">License URL</a>
                }
                @if (Model.CitizenshipURL != null)
                {
                    <a class="btn btn-blue mb-2 w-75" href="@Model.CitizenshipURL" target="_blank">Citizenship URL</a>
                }
            </div>
        </div>


    </div>
</form>
