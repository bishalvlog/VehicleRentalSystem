@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<partial name="_Notification" />

<div class="row align-items-center justify-content-end" style="height: 80vh; margin-top:8vh;">
    <div class="col-md-4" >
        <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" role="form">
            <h4>Log In</h4>
            <hr class="mt-4 mb-4" />
            <div class="my-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="my-3">
                <input asp-for="Password" id="initial" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password"/>
                <div class="d-flex mb-2 justify-content-end  position-absolute" style="margin-top: -30px;margin-left: 385px;">
                    <img src="~/images/system/eye-close.png" id="togglePassword" onclick="chngimg()"/>
                    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
                    <script>
                        console.log('~/images/system/eye-close.png');
                        var toggle = false;
                        function chngimg() {
                            if (toggle === true) {
                                document.getElementById('togglePassword').src = '/images/system/eye-close.png'
                                document.getElementById('initial').setAttribute('type', "password");
                            }
                            else {
                                document.getElementById('togglePassword').src = '/images/system/eye.png'
                                document.getElementById('initial').setAttribute('type', "text");
                            }
                            toggle = !toggle; 
                        }        

                    </script>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="my-3">
                <div class="checkbox">
                    <label asp-for="RememberMe" class="form-label">
                        <input class="form-check-input" type="checkbox" asp-for="RememberMe"  />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>

            <div class="form-group mb-4">
                <button type="submit" class="btn btn-primary form-control">Log in</button>
            </div>

            <p>
                <a asp-action="Register"> Register as a new user?</a>
            </p>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <img src="/images/system/car-2.gif" style="margin-top:45px; margin-left:80px;"  />

        </section>
    </div>
</div>

