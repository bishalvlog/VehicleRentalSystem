@model DamageRequestViewModel

@{
ViewData["Title"] = "Damage Request Details";
}


<div class="container-fluid" style=" margin-top:10vh;">
	<h3>Damage Request Form Details</h3>

	<div class="row mb-3">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="col-6">
			<h3 class="text-dark">Details for @Model.VehicleName</h3>
		</div>
		<div class="col-8 pt-4" >
			<div class="form-group row">
				<input asp-for="DamageRequest.RentalId" class="form-control" type="hidden" required/>
				<div class="col-4">
					<label asp-for="DamageRequest.DamageDescription"></label>
				</div>
				<div class="col-8 mb-4">
					<input asp-for="DamageRequest.DamageDescription" disabled class="form-control" />
					<span asp-validation-for="DamageRequest.DamageDescription" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="DamageRequest.DamageRequestDate"></label>
				</div>
				<div class="col-8 mb-4">
					<input asp-for="DamageRequest.DamageRequestDate" disabled class="form-control" />
					<span asp-validation-for="DamageRequest.DamageRequestDate" class="text-danger"></span>
				</div>
			</div>
			@if (Model.DamageRequest.IsApproved)
			{
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="DamageRequest.RepairCost"></label>
					</div>
					<div class="col-8 mb-4">
						<input asp-for="DamageRequest.RepairCost" disabled class="form-control" />
						<span asp-validation-for="DamageRequest.RepairCost" class="text-danger"></span>
					</div>
				</div>
			}
			<div class="col-8 offset-4">
				<a asp-action="Accepted" class="btn btn-green form-control">Back</a>
			</div>
		</div>
	</div>
</div>